# Configurazione generale
daemon
maxconn 500
nserver 8.8.8.8
nserver 8.8.4.4
nscache 65536
timeouts 1 5 30 60 180 1800 15 60

# Log
log /var/log/3proxy/3proxy.log D
logformat "- +_L%t.%.  %N.%p %E %U %C:%c %R:%r %O %I %h %T"
rotate 30

# Utenti e accesso
users admin:CL:password

# Configurazione per proxy mobile
# Sostituire IP_SERVER con l'IP del tuo server
external IP_SERVER

# Porta di partenza per i proxy
setgid 65535
setuid 65535

# Configurazione proxy
auth strong
allow admin
proxy -p3128 -a
